{
    "name": "universal-react-app",
    "version": "1.0.0",
    "description": "Universal React Application Template",
    "main": "index.js",
    "scripts": {
        "clean": "rm static/ dist/ -fr",
        "watch": "webpack --watch --mode development --config-name webpack.config.js",
        "dev": "npm run clean && npm run watch & nodemon --exec babel-node src/server/server.js",
        "client:build": "webpack --mode production --config-name webpack.config.js",
        "server:build": "babel src/server --out-dir dist",
        "build": "npm run clean && npm run client:build && npm run server:build"
    },
    "author": "Deepak Shakya <justdpk@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "axios": "^0.18.0",
        "dygraphs": "^2.1.0",
        "express": "^4.16.3",
        "prop-types": "^15.6.1",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-router": "^4.2.0",
        "react-router-dom": "^4.2.2",
        "redux": "^3.7.2",
        "redux-thunk": "^2.2.0",
        "semantic-ui-css": "^2.3.1",
        "semantic-ui-react": "^0.79.0",
        "validator": "^9.4.1"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.2.2",
        "babel-loader": "^7.1.4",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "css-loader": "^0.28.11",
        "eslint": "^4.19.1",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-import": "^2.9.0",
        "eslint-plugin-jsx-a11y": "^6.0.3",
        "eslint-plugin-prettier": "^2.6.0",
        "eslint-plugin-react": "^7.7.0",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.1.0",
        "http-server": "^0.11.1",
        "mini-css-extract-plugin": "^0.2.0",
        "nodemon": "^1.17.2",
        "path": "^0.12.7",
        "prettier": "^1.11.1",
        "redux-devtools-extension": "^2.13.2",
        "webpack": "^4.2.0",
        "webpack-cli": "^2.0.13",
        "webpack-dev-server": "^3.1.1"
    }
}
